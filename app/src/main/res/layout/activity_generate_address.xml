<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/address_text_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:hint="your address..."
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/address_qr_code_image"
        android:layout_width="@dimen/qr_address_dimen"
        android:layout_height="@dimen/qr_address_dimen"
        android:layout_marginBottom="40dp"
        android:src="@drawable/qr_placeholder" />


    <TextView
        android:id="@+id/generate_new_address_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="NEW ADDRESS"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/save_address_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textSize="20sp" />

</LinearLayout>